Import('env')

expat_env = env.Clone()
expat_env.Append(
    CPPDEFINES = [
        "_LIB",
        "XML_LARGE_SIZE",
        "XML_STATIC",
        "COMPILED_FROM_DSP",
    ],
)

expat_env.ComponentLibrary(
    'expat.lib',
    source = [
        'Source/lib/xmlparse.c',
        'Source/lib/xmlrole.c',
        'Source/lib/xmltok.c',
    ],
)
